<%= form_for @administrator_session, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>
      <h1><%= title -%></h1>
    </legend>

    <% if @administrator_session.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@administrator_session.errors.count, "error") %> prohibited this administrator_session from being saved:</h2>

        <ul>
        <% @administrator_session.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :username, 'Brugernavn', class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_field :username, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, 'Kodeord', class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.password_field :password, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit title, class: 'btn btn-success btn-sm' %>
      </div>
    </div>
  </fieldset>
<% end %>
