<div class="page-header">
  <h1><%= fa_icon 'cogs', text: 'Metadata' %></h1>
</div>

<table class="table table-condensed table-bordered table-striped">
  <thead>
    <tr>
      <th>Fra</th>
      <th>Kontant</th>
      <th>Svind</th>
      <th>Ã˜lbeholdning</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @meta.each do |metum| %>
      <tr>
        <td><%= l metum.created_at, format: '%e. %B %Y' %></td>
        <td><%= number_to_currency metum.cash %></td>
        <td><%= number_to_currency metum.loss %></td>
        <td><%= number_to_currency metum.stock %></td>
        <td class="text-center">
          <%= link_to edit_metum_path(metum), class: 'btn btn-warning btn-xs' do %>
            <%= fa_icon 'edit', text: 'Rediger' %>
          <% end %>
        </td>
        <td class="text-center">
          <%= link_to metum, method: :delete, data: { confirm: 'Er du sikker?' }, class: 'btn btn-danger btn-xs' do %>
            <%= fa_icon 'flash', text: 'Slet' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Opret metadata', new_metum_path, class: 'btn btn-link' %>
