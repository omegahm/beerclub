<%= form_for @administrator, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>
      <h1><%= title -%></h1>
    </legend>

    <% if @administrator.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@administrator.errors.count, "error") %> prohibited this administrator from being saved:</h2>

        <ul>
        <% @administrator.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :username, 'Brugernavn', class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_field :username, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password, 'Kodeord', class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.password_field :password, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, 'Gentag kodeord', class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.password_field :password_confirmation, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit 'Opret', class: 'btn btn-default' %>
        <%= link_to 'Tilbage', administrators_path, class: 'btn btn-link' %>
      </div>
    </div>
  </fieldset>
<% end %>
