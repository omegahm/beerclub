<%= form_for @setting, html: { class: 'form-horizontal' } do |f| %>
  <fieldset>
    <legend>
      <h1><%= title -%></h1>
    </legend>

    <% if @setting.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@setting.errors.count, "error") %> prohibited this setting from being saved:</h2>

        <ul>
        <% @setting.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :key, 'Key', class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_field :key, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :value, 'Value', class: 'col-lg-2 control-label' %>
      <div class="col-lg-10">
        <%= f.text_field :value, class: 'form-control' %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.submit 'Opret', class: 'btn btn-success btn-sm' %>
        <%= link_to 'Tilbage', settings_path, class: 'btn btn-link btn-sm' %>
      </div>
    </div>
  </fieldset>
<% end %>
