<div class="page-header">
  <h1><i class="fa fa-glass"></i> Produkter</h1>
</div>

<table class="table table-condensed table-bordered table-striped">
  <thead>
    <tr>
      <th>Navn</th>
      <th>Nuværende pris</th>
      <th>Synlig</th>
      <th>Størrelse på print</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= number_to_currency product.price %></td>
        <td>
          <span class="label label-<%= product.visible ? 'success' : 'danger' -%>">
            <i class="fa fa-<%= product.visible ? 'check-' : '' -%>square-o"></i>
          </span>
        </td>
        <td><%= product.width %></td>
        <td class="text-center">
          <%= link_to edit_product_path(product), class: 'btn btn-warning btn-xs' do %>
            <i class="fa fa-edit"></i> Rediger
          <% end %>
        </td>
        <td class="text-center">
          <%= link_to product, method: :delete, data: { confirm: 'Er du sikker?' }, class: 'btn btn-danger btn-xs' do %>
            <i class="fa fa-flash"></i> Slet
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<p>
  Summen af størrelse på print på aktive produkter, skal summere til maksimum 549.89. Nuværende sum er: <%= @sum_of_width %>
</p>

<br>

<%= link_to 'Opret nyt produkt', new_product_path, class: 'btn btn-link' %>
